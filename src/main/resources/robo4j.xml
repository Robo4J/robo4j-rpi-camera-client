<robo4j>
    <roboUnit id="httpClient">
        <class>com.robo4j.socket.http.units.HttpClientDecoratorUnit</class>
    </roboUnit>
    <roboUnit id="imageDescriptor">
        <class>com.robo4j.socket.http.units.ImageDecoratorUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">httpClient</value>
            <value name="host" type="String">192.168.0.42</value>
            <value name="port" type="int">8037</value>
            <value name="remoteUnits" type="String">[{"/units/imageProcessor":["POST"]}]</value>
        </config>
    </roboUnit>
    <roboUnit id="cameraConfig">
        <class>com.robo4j.camara.client.unit.CameraConfigurationUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">camera</value>
        </config>
    </roboUnit>
    <roboUnit id="camera">
        <class>com.robo4j.units.rpi.camera.RaspistillUnit</class>
        <config name="com.robo4j.root">
            <value name="target" type="String">imageDescriptor</value>
        </config>
    </roboUnit>
    <roboUnit id="httpServer">
        <class>com.robo4j.socket.http.units.HttpServerUnit</class>
        <config name="com.robo4j.root">
            <value name="port" type="int">8035</value>
            <value name="packages" type="String">com.robo4j.socket.http.codec</value>
            <value name="targets" type="String">{"cameraConfigurationProcessor":"POST","cameraConfig":"POST"}</value>
        </config>
    </roboUnit>
</robo4j>